{
  "name": "ordinary/coding-style",
  "description": "Coding style standard for ordinary/* libraries.",
  "keywords": ["ordinary-coding-style", "coding-style", "phpcs"],
  "type": "phpcodesniffer-standard",
  "license": "MIT",
  "authors": [
    {
      "name": "Brandon Jackson",
      "email": "brandonja991@gmail.com"
    }
  ],
  "require": {
    "php": "^8.2",
    "squizlabs/php_codesniffer": "^3.7",
    "slevomat/coding-standard": "^8.8"
  },
  "require-dev": {
    "roave/security-advisories": "dev-latest",
    "captainhook/captainhook": "^5.14",
    "captainhook/plugin-composer": "^5.3"
  },
  "config": {
    "allow-plugins": {
      "captainhook/plugin-composer": true,
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "scripts": {
    "test": [
      "vendor/bin/phpcs --standard=Ordinary -e"
    ]
  }
}
